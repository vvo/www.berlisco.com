{
  "name": "www.berlisco.com",
  "private": true,
  "version": "1.0.0",
  "description": "Instant npmjs search",
  "main": "index.js",
  "scripts": {
    "build-js": "browserify frontend/index.js | uglifyjs -mc > frontend/bundle.js",
    "watch-js": "watchify frontend/index.js -o frontend/bundle.js -d -v",
    "browsersync": "browser-sync start --no-open --server frontend/ --files 'frontend/bundle.js, frontend/index.html, frontend/style.css'",
    "dev-command": "npm run watch-js & npm run browsersync",
    "dev": "localenv .env -- npm run dev-command"
  },
  "author": "Vincent Voyer <vincent@zeroload.net>",
  "license": "ISC",
  "dependencies": {
    "agentkeepalive": "^0.2.3",
    "algolia-search": "^1.6.4",
    "algoliasearch": "^2.8.0",
    "brfs": "^1.2.0",
    "browserify": "^6.3.3",
    "browserify-shim": "^3.8.0",
    "debug": "^2.1.0",
    "hyperglue": "^1.3.3",
    "localenv": "^0.2.2",
    "localenvify": "^1.0.0",
    "lodash.debounce": "^2.4.1",
    "moment": "^2.8.4",
    "npm-registry": "^0.1.12",
    "page": "^1.5.0",
    "pouchdb": "^3.1.0",
    "promise": "^6.0.1",
    "querystring": "^0.2.0",
    "superagent": "^0.21.0",
    "truncate": "^1.0.4",
    "uglify-js": "^2.4.15"
  },
  "devDependencies": {
    "browser-sync": "^1.7.2",
    "http-server": "^0.7.3",
    "watchify": "^2.1.1"
  },
  "browser": {
    "algoliasearch": "./node_modules/algoliasearch/dist/algoliasearch.js"
  },
  "browserify": {
    "transform": [
      [
        "localenvify",
        {
          "envfile": ".env"
        }
      ],
      "browserify-shim",
      "brfs"
    ]
  },
  "browserify-shim": {
    "algoliasearch": "AlgoliaSearch"
  }
}
