{
  "name": "www.berlisco.com",
  "private": true,
  "version": "1.0.0",
  "description": "Instant npmjs search",
  "main": "index.js",
  "scripts": {
    "build-js": "browserify frontend/index.js -o frontend/bundle.js",
    "build": "npm run build-js && node scripts/build.js",
    "watch-js": "watchify frontend/index.js -o frontend/bundle.js -d -v",
    "browsersync": "browser-sync start --no-open --server frontend/ --files 'frontend/bundle.js, frontend/index.html, frontend/css/*.css'",
    "dev-command": "npm run watch-js & npm run browsersync",
    "dev": "localenv .env -- npm run dev-command"
  },
  "author": "Vincent Voyer <vincent@zeroload.net>",
  "license": "ISC",
  "dependencies": {
    "agentkeepalive": "^0.2.2",
    "algolia-search": "^1.6.4",
    "algoliasearch": "^2.8.0",
    "brfs": "^1.2.0",
    "browserify": "^8.0.3",
    "browserify-shim": "^3.8.0",
    "debug": "^2.1.0",
    "dom-classes": "0.0.1",
    "hyperglue": "^1.3.3",
    "localenv": "^0.2.2",
    "localenvify": "^1.0.0",
    "lodash.debounce": "^2.4.1",
    "moment": "^2.8.4",
    "npm-registry": "^0.1.12",
    "page": "^1.5.0",
    "pouchdb": "^3.1.0",
    "promise": "^6.0.1",
    "querystring": "^0.2.0",
    "superagent": "^0.21.0",
    "truncate": "^1.0.4"
  },
  "devDependencies": {
    "browser-sync": "^1.7.2",
    "gulp": "^3.8.10",
    "gulp-csso": "^0.2.9",
    "gulp-filter": "^2.0.0",
    "gulp-if": "^1.2.5",
    "gulp-minify-html": "^0.1.7",
    "gulp-rev": "^2.0.1",
    "gulp-rev-replace": "^0.3.1",
    "gulp-svgmin": "^1.0.0",
    "gulp-uglify": "^1.0.2",
    "gulp-useref": "^1.0.2",
    "http-server": "^0.7.3",
    "imagemin-pngquant": "^4.0.0",
    "watchify": "^2.1.1"
  },
  "browser": {
    "algoliasearch": "./node_modules/algoliasearch/dist/algoliasearch.js"
  },
  "browserify": {
    "transform": [
      [
        "localenvify",
        {
          "envfile": ".env"
        }
      ],
      "browserify-shim",
      "brfs"
    ]
  },
  "browserify-shim": {
    "algoliasearch": "AlgoliaSearch"
  }
}
